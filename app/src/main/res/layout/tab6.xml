<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#4A64B5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#C1CAE6"
        android:layout_alignParentTop ="true"
        android:layout_centerHorizontal="true"
        android:text="00:00:00"
        android:freezesText="true"
        />

    <Button
        android:id="@+id/btnStart6"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="41dp"
        android:background="#9DABD7"
        android:text="Start"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnReset6"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnStart6"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:background="#9DABD7"
        android:text="Reset"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnPause6"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStart6"
        android:layout_marginTop="24dp"
        android:background="#9DABD7"
        android:text="Send"
        android:textColor="#FFFFFF" />
</RelativeLayout>